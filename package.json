{
  "name": "restaurant",
  "version": "1.0.0",
  "description": "\"simple REST api for my restaurant\"",
  "main": "index.js",
  "scripts": {
    "dev": "NODE_ENV=development nodemon -w src -exec \"babel-node src --presets es2015\"",
    "build": "babel src -s -D dist -present es2015",
    "start": "NODE_ENV=production pm2 start dist",
    "prestart": "npm run build",
    "lint": "eslint src"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },  
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.7.7"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.3",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^6.6.0",
    "nodemon": "^1.19.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kahdichienja/restaurant.git"
  },
  "author": "kahdchienja",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kahdichienja/restaurant/issues"
  },
  "homepage": "https://github.com/kahdichienja/restaurant#readme"
}
